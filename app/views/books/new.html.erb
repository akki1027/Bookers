<body>
	<h2 class="new-h2">New Book</h2>

	<%= form_for(@book) do |f| %>
		<div class="new-book-field">
			<h4 class="new-h4">Title</h4>
			<%= f.text_field :title %>
		</div>

		<div class="new-book-field">
			<h4 class="new-h4">Body</h4>
			<%= f.text_area :body %>
		</div>

		<div class="new-book-field">
			<%= f.submit 'Create Book' %>
		</div>

	<% end %>
</body>
