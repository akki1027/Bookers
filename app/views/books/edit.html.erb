<body>
	<h2 class="edit-h2">Editing Book</h2>

	<%= form_for(@book) do |f| %>
		<h4>Title</h4>
		<%= f.text_field :title %>

		<h4>Body</h4>
		<%= f.text_area :body %>

		<p><%= f.submit 'Update Book' %></p>
	<% end %>

	<a><%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path(@book) %></a>
</body>

