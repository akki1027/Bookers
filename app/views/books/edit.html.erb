<body>
	<h1 class="edit-h1">Editing Book</h1>

	<%= form_for(@book) do |f| %>
		<div class="field-area">
			<h4>Title</h4>
			<%= f.text_field :title %>
		</div>

		<div class="field-area">
			<h4>Body</h4>
			<%= f.text_area :body %>
		</div>

		<div class="field-area">
			<%= f.submit 'Update Book' %>
		</div>
	<% end %>

	<a><%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path(@book) %></a>
</body>

